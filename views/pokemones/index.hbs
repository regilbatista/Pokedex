
    
    <div class="row py-5">
          <div class="col-md-6">
              <form method="POST" id="form-delete-pokemon" action="/found" class="form-inline">
              <div class="row">
                  <div class="col-4">                
                  <input type="text" class="form-control" placeholder="Ejemplo: pikachu" name="pokemon" value= "{{#if editMode}}{{pokemon.name}}{{/if}}" />
                  </div>
                  <div class="col-8">
                  <button type="submit" class="btn  btn-outline-secondary me-3 ">Buscar</button> 
                  </div>
              </div>  
            </form> 
          </div>
          <div class="col-md-6">
            <form method="POST" id="form-delete-pokemon" action="/filter" class="form-inline">
            <div class="row">
                  <div class="col-6">
                      <select id="regions" name="region" class="form-select" required>
                         <option value="" {{#if editMode}}{{else}} selected {{/if}}>Seleccione una region</option>
                            {{#each regions as |region|}}
                              {{#if (equals region.id ../pokemon.regionId)}}
                                <option value="{{region.id}}" selected >{{region.name}}</option>
                              {{else}}
                                <option value="{{region.id}}">{{region.name}}</option>
                              {{/if}}
                            {{/each}}
                      </select>
                  </div>
                  <div class="col-6">
                  <button type="submit" class="btn  btn-outline-warning me-3 ">Filtrar</button> 
                  </div>
              </div> 
            </form> 
          </div>
      </div>

  <div class="album py-5 bg-light">
    <div class="container">
     <div class="row row-cols-1 row-cols-md-4 g-4">
    {{#if haspokemons}}
      {{#each pokemons as |pokemon|}}
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{pokemon.imageurl}}" class="card-img-top" width="100%" height="225" alt="{{pokemon.name}}">
            <div class="card-body">
              <h5 class="card-title">{{pokemon.name}}</h5>
              <p class="card-text"><small class="text-muted"><b>Region: </b>{{pokemon.region.dataValues.name}} &nbsp; <b>Tipo: </b>{{pokemon.type.dataValues.name}}</small></p> 
               </div>      
            </div>
           </div>
          {{/each}}
         {{else}}
         {{#if filer}}<h1>No hay pokemones de esta region</h1>{{else}}<h1>No hay pokemones creados</h1>{{/if}}
       {{/if}}
     </div>
   </div>
 </div>