

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Tipos</h1>
        <p class="lead text-muted">Una app hecha por entrenadores para entrenadores</p>
        <p>
          <a href="/admin/add-types" class="btn btn-primary my-2">AÃ±adir un tipo</a>         
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div id="type-container" class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
         {{#if hastypes}}
        {{#each types as |type|}}
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">{{type.name}}</h5>

                <a href="/admin/edit-types/{{type.id}}?edit=true" type="button" class="btn btn-sm float-end btn-outline-warning me-3">Editar</a>

                 <form method="POST" id="form-delete-type" action="/admin/drop-types" class="form-inline">
                  <input type="hidden" name="typeId" value= "{{type.id}}" />
                  <button type="submit" id="delete-type" class="btn btn-sm float-end btn-outline-danger me-3">Eliminar</button> 
                </form>     
               </div>      
            </div>
          </div>
        {{/each}}
         {{else}}
        <h1>No hay tipos creados</h1>
        {{/if}}
        </div>
      </div>
    </div>
  
