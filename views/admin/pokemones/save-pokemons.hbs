<div class="container mt-8">
        <div class="row">
            <div id="container-html" class="col-8 offset-2">
            <div class="mt-5">
            </div>
              {{#if hasregions}}
              {{#if hastypes}}
                <div class="card">
                    <div class="card-header bg-secondary bg-gradient text-light mb-3" >
                        <h4 class="text-center">{{#if editMode}}Edicion {{else}} Creacion {{/if}}de pokemones</h4>
                    </div>
                    <div class="card-body ">
                  <form method="POST" action="{{#if editMode}}/admin/edit-pokemons{{else}}/admin/add-pokemons{{/if}}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre:</label>
                            <input type="text" class="form-control" placeholder="Ejemplo: pikachu" name="name" value="{{#if editMode}}{{pokemon.name}}{{/if}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">imagen url:</label>
                            <input type="text" class="form-control" placeholder="Ejemplo: data:image/png;base64,iVBORw0KGgo..." name="image" value="{{#if editMode}}{{pokemon.imageurl}}{{/if}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="region" class="form-label">Region:</label>
                            <select id="regions" name="region" class="form-select" required>
                                <option value="" {{#if editMode}}{{else}} selected {{/if}}>Seleccione una region</option>
                                {{#each regions as |region|}}

                                {{#if (equals region.id ../pokemon.regionId)}}
                                 <option value="{{region.id}}" selected >{{region.name}}</option>
                                 {{else}}
                                <option value="{{region.id}}">{{region.name}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                            <div class="mb-3">
                            <label for="type" class="form-label">Tipo:</label>
                            <select id="types" name="type" class="form-select" required>
                                <option value="" {{#if editMode}}{{else}} selected {{/if}}>Seleccione un tipo</option>
                                {{#each types as |type|}}
                                 {{#if (equals type.id ../pokemon.typeId)}}
                                 <option value="{{type.id}}" selected >{{type.name}}</option>
                                 {{else}}
                                <option value="{{type.id}}">{{type.name}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                            <div class="invalid-feedback">
                                Por favor seleccione la carrera a la que pertenece.
                            </div>
                        </div>                       
                        </div>
                        <div>
                            {{#if editMode}}
                            <input type="hidden" name="pokeId" value="{{pokemon.id}}">
                            {{/if}}
                            <button type="submit" class="btn btn-outline-secondary float-end me-3 mb-3" >{{#if editMode}}Editar {{else}} Crear {{/if}}</button>
                            <a href="/admin/pokemons" type="button" class="btn btn-outline-warning float-end me-3 mb-3" >Atras</a>
                       </div>
                    </form>
                    </div>
                     </div>
                    {{else}}
                    <h1>No hay tipos creados</h1>
                    {{/if}}
                {{else}}
                 <h1>No hay regiones creadas</h1>
              {{/if}}
            </div>
        </div>