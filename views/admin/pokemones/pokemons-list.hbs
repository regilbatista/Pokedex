

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Pokemones</h1>
        <p class="lead text-muted">Una app hecha por entrenadores para entrenadores</p>
        <p>
          <a href="/admin/add-pokemons" class="btn btn-primary my-2">AÃ±adir un pokemon</a>         
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div  id="poke-container" class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">

      {{#if haspokemons}}
        {{#each pokemons as |pokemon|}}
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{pokemon.imageurl}}" class="card-img-top" width="100%" height="500" alt="{{pokemon.name}}">
            <div class="card-body">
              <h5 class="card-title">{{pokemon.name}}</h5>
              <p class="card-text"><small class="text-muted"> <b>Region: </b>{{pokemon.region.dataValues.name}} &nbsp; <b>Tipo: </b>{{pokemon.type.dataValues.name}}</small></p>
              
                <a href="/admin/edit-pokemons/{{pokemon.id}}?edit=true" type="button" class="btn btn-sm float-end btn-outline-warning me-3">Editar</a>

                 <form method="POST" id="form-delete-pokemon" action="/admin/drop-pokemons" class="form-inline">
                  <input type="hidden" name="pokeId" value= "{{pokemon.id}}" />
                  <button type="submit" id="delete-pokemon" class="btn btn-sm float-end btn-outline-danger me-3">Eliminar</button> 
                </form>     
               </div>      
            </div>
          </div>
        {{/each}}
        {{else}}
        <h1>No hay pokemones creados</h1>
        {{/if}}
        </div>
      </div>
    </div>
  
